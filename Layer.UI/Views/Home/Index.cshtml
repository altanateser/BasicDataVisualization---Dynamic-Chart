<html>
<head>

    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        #chart_container {
            width: 400px;
            height: 400px;
            border: 1px solid #ddd;
            padding: 1px;
            border-radius: 4px;
        }

        body {
            font: 13px/20px "Lucida Grande", Tahoma, Verdana, sans-serif;
            color: #404040;
            background: #f8f8ff;
        }
    </style>

    <body>
        <section class="container">

            Dynamic Chart with your chose: <br />
            Database: DATA, Selection: Age, Job: All.

            <div id="chart_container">
                <canvas id="bar_chart"></canvas>

                <script>
                    var ages = @Html.Raw(Json.Encode(ViewBag.AGE));
                    var DDL = @Html.Raw(Json.Encode(ViewBag.DDL));

                    var ctx = $('#bar_chart');
                    var myChart = new Chart(ctx,
                        {
                            type: 'bar',
                            data: {
                                labels: ages,
                                datasets: [
                                    {
                                        label: 'Worker',
                                        data: DDL,
                                        backgroundColor: [
                                            'rgba(255, 99, 132, 0.2)',
                                            'rgba(54, 162, 235, 0.2)',
                                            'rgba(255, 206, 86, 0.2)',
                                            'rgba(75, 192, 192, 0.2)',
                                            'rgba(153, 102, 255, 0.2)',
                                            'rgba(255, 159, 64, 0.2)'
                                        ],
                                        borderColor: [
                                            'rgba(255,99,132,1)',
                                            'rgba(54, 162, 235, 1)',
                                            'rgba(255, 206, 86, 1)',
                                            'rgba(75, 192, 192, 1)',
                                            'rgba(153, 102, 255, 1)',
                                            'rgba(255, 159, 64, 1)'
                                        ],
                                        borderWidth: 1
                                    }
                                ]
                            },
                            options: {
                                maintainAspectRatio: false,
                                legend: { display: false },
                                scales: {
                                    yAxes: [
                                        {
                                            ticks: {
                                                beginAtZero: true
                                            }
                                        }
                                    ]
                                }
                            }
                        });


                </script>

                </div>
        </section>
    </body>


</head>
</html>